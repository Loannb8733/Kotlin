<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Thème de l'application de base -->
    <style name="Theme.MyFirstPhoto" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Couleur primaire de la marque -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Couleur secondaire de la marque -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Couleur de la barre d'état -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Personnalisez votre thème ici -->
    </style>

    <style name="Theme.MyFirstPhoto.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyFirstPhoto.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.MyFirstPhoto.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>